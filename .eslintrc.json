{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
		"react/prop-types": "off",
		"react/jsx-one-expression-per-line": "off",
        "react/jsx-props-no-spreading": "off",
		"padded-blocks": "off",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2
            }
        ],
		"radix": "off"
    }
}